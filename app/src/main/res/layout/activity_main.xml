<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">


    <Button
        android:id="@+id/showToastButton"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="41dp"
        android:text="@string/show_toast" />

    <EditText
        android:layout_marginBottom="16dp"
        android:id="@+id/etWriteMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Write your Message"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSendMTAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:text="Send Message to another activity" />

    <Button
        android:id="@+id/btnShareMsgToAnotherApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Message To another App" />


</LinearLayout>